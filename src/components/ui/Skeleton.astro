---
// Skeleton Loaders - Componentes de carga elegantes
interface Props {
  type: 'product-card' | 'product-grid' | 'text' | 'avatar' | 'button' | 'image';
  count?: number;
}

const { type, count = 1 } = Astro.props;
---

{type === 'product-card' && (
  <div class="skeleton-card bg-white rounded-lg border border-arena-light overflow-hidden animate-pulse">
    <div class="aspect-square bg-arena-pale"></div>
    <div class="p-4 space-y-3">
      <div class="h-4 bg-arena-pale rounded w-3/4"></div>
      <div class="h-4 bg-arena-pale rounded w-1/2"></div>
      <div class="h-6 bg-arena-pale rounded w-1/3"></div>
    </div>
  </div>
)}

{type === 'product-grid' && (
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {Array.from({ length: count }).map((_, i) => (
      <div key={i} class="skeleton-card bg-white rounded-lg border border-arena-light overflow-hidden animate-pulse">
        <div class="aspect-square bg-arena-pale"></div>
        <div class="p-4 space-y-3">
          <div class="h-4 bg-arena-pale rounded w-3/4"></div>
          <div class="h-4 bg-arena-pale rounded w-1/2"></div>
          <div class="h-6 bg-arena-pale rounded w-1/3"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'text' && (
  <div class="space-y-2 animate-pulse">
    {Array.from({ length: count }).map((_, i) => (
      <div key={i} class="h-4 bg-arena-pale rounded" style={`width: ${70 + Math.random() * 30}%`}></div>
    ))}
  </div>
)}

{type === 'avatar' && (
  <div class="w-12 h-12 rounded-full bg-arena-pale animate-pulse"></div>
)}

{type === 'button' && (
  <div class="h-12 bg-arena-pale rounded-lg w-32 animate-pulse"></div>
)}

{type === 'image' && (
  <div class="aspect-square bg-arena-pale rounded-lg animate-pulse"></div>
)}

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
