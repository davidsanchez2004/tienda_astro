---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'BY ARENA Admin Panel' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title} | BY ARENA</title>
  </head>
  <body class="bg-gray-50">
    <slot />
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    padding: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }
</style>
