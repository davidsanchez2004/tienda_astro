---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Autenticaci칩n | BY ARENA" description="Procesando autenticaci칩n">
  <div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <div class="inline-block animate-spin">
        <svg class="w-12 h-12 text-arena" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
      <p class="mt-4 text-gray-600">Procesando tu autenticaci칩n...</p>
      <p class="text-sm text-gray-500 mt-2">Ser치s redirigido en unos momentos</p>
    </div>
  </div>

  <script>
    import { supabaseClient } from '../../lib/supabase';
    import { onUserLogin } from '../../stores/useCart';
    
    // Handle OAuth callback
    async function handleCallback() {
      try {
        // Esperar a que Supabase procese el callback
        const { data: { session } } = await supabaseClient.auth.getSession();
        
        if (session?.user?.id) {
          console.log('[AuthCallback] User authenticated:', session.user.id);
          // Sincronizar carrito con el nuevo usuario
          onUserLogin(session.user.id);
        }
        
        // Redirigir a inicio
        setTimeout(() => {
          window.location.href = '/';
        }, 1000);
      } catch (error) {
        console.error('[AuthCallback] Error:', error);
        window.location.href = '/login';
      }
    }
    
    handleCallback();
  </script>
</BaseLayout>
