---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchProducts from '../components/islands/SearchProducts';
---

<BaseLayout title="Buscar | BY ARENA" description="Busca productos en nuestra tienda">
  <div class="max-w-7xl mx-auto px-4 md:px-8 lg:px-12 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-serif font-bold text-gray-900 mb-4">
        Buscar Productos
      </h1>
      <p class="text-lg text-gray-600">
        Encuentra el complemento perfecto para ti
      </p>
    </div>

    <SearchProducts client:load />
  </div>
</BaseLayout>
