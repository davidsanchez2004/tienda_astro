---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabaseAdminClient, supabaseClient } from '../../lib/supabase';

const { id } = Astro.params;

// Verificar autenticaci√≥n
const authHeader = Astro.request.headers.get('cookie');
let user = null;

// Obtener el pedido
const { data: order, error: orderError } = await supabaseAdminClient
  .from('orders')
  .select('*')
  .eq('id', id)
  .single();

if (orderError || !order) {
  return Astro.redirect('/404');
}

// Obtener los items del pedido
const { data: orderItems } = await supabaseAdminClient
  .from('order_items')
  .select('*, products(id, name, image_url, slug)')
  .eq('order_id', id);

const items = orderItems || [];

// Formatear fecha
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
};

// Estado del pedido
const statusLabels: Record<string, string> = {
  pending: 'Pendiente',
  paid: 'Pagado',
  processing: 'Procesando',
  shipped: 'Enviado',
  delivered: 'Entregado',
  cancelled: 'Cancelado',
  refunded: 'Reembolsado'
};

const statusColors: Record<string, string> = {
  pending: 'bg-yellow-100 text-yellow-800',
  paid: 'bg-green-100 text-green-800',
  processing: 'bg-blue-100 text-blue-800',
  shipped: 'bg-purple-100 text-purple-800',
  delivered: 'bg-green-100 text-green-800',
  cancelled: 'bg-red-100 text-red-800',
  refunded: 'bg-gray-100 text-gray-800'
};

const title = `Pedido #${order.id.slice(0, 8).toUpperCase()} | BY ARENA`;
---

<BaseLayout title={title} description="Detalles de tu pedido">
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-12">
    <!-- Header -->
    <div class="mb-8">
      <a href="/mis-pedidos" class="text-arena hover:text-arena-light flex items-center gap-2 mb-4">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Volver a Mis Pedidos
      </a>
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <h1 class="text-3xl font-serif font-bold text-gray-900">
            Pedido #{order.id.slice(0, 8).toUpperCase()}
          </h1>
          <p class="text-gray-600 mt-1">
            Realizado el {formatDate(order.created_at)}
          </p>
        </div>
        <span class={`px-4 py-2 rounded-full text-sm font-semibold ${statusColors[order.status] || 'bg-gray-100 text-gray-800'}`}>
          {statusLabels[order.status] || order.status}
        </span>
      </div>
    </div>

    <!-- Order Info Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-8">
      <!-- Shipping Info -->
      <div class="bg-white rounded-lg border border-arena-light p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n de Env√≠o</h2>
        <div class="space-y-2 text-gray-700">
          <p><strong>Nombre:</strong> {order.guest_first_name} {order.guest_last_name}</p>
          <p><strong>Email:</strong> {order.guest_email}</p>
          {order.guest_phone && <p><strong>Tel√©fono:</strong> {order.guest_phone}</p>}
          
          {order.shipping_option === 'home' && order.shipping_address && (
            <div class="mt-4 pt-4 border-t border-arena-light">
              <p class="font-semibold mb-2">Direcci√≥n de Env√≠o:</p>
              <p>{order.shipping_address.street}</p>
              <p>{order.shipping_address.postal_code} {order.shipping_address.city}</p>
              <p>{order.shipping_address.country || 'Espa√±a'}</p>
            </div>
          )}
          
          {order.shipping_option === 'pickup' && (
            <div class="mt-4 pt-4 border-t border-arena-light">
              <p class="font-semibold text-arena">üè™ Recogida en tienda</p>
              <p class="text-sm text-gray-600 mt-1">Te avisaremos cuando est√© listo</p>
            </div>
          )}
        </div>
      </div>

      <!-- Payment Info -->
      <div class="bg-white rounded-lg border border-arena-light p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Informaci√≥n de Pago</h2>
        <div class="space-y-2 text-gray-700">
          <p>
            <strong>Estado:</strong>
            <span class={`ml-2 px-2 py-1 rounded text-xs font-semibold ${
              order.payment_status === 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
            }`}>
              {order.payment_status === 'paid' ? 'Pagado' : 'Pendiente'}
            </span>
          </p>
          <p><strong>M√©todo:</strong> Tarjeta de cr√©dito</p>
          {order.stripe_payment_intent_id && (
            <p class="text-xs text-gray-500">
              <strong>Referencia:</strong> {order.stripe_payment_intent_id.slice(-12)}
            </p>
          )}
        </div>

        <div class="mt-6 pt-4 border-t border-arena-light space-y-2">
          <div class="flex justify-between">
            <span>Subtotal:</span>
            <span>‚Ç¨{(order.subtotal || 0).toFixed(2)}</span>
          </div>
          <div class="flex justify-between">
            <span>Env√≠o:</span>
            <span>{order.shipping_cost > 0 ? `‚Ç¨${order.shipping_cost.toFixed(2)}` : 'Gratis'}</span>
          </div>
          {order.discount_amount > 0 && (
            <div class="flex justify-between text-green-600">
              <span>Descuento:</span>
              <span>-‚Ç¨{order.discount_amount.toFixed(2)}</span>
            </div>
          )}
          <div class="flex justify-between text-lg font-bold pt-2 border-t border-arena-light">
            <span>Total:</span>
            <span>‚Ç¨{(order.total || 0).toFixed(2)}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Order Items -->
    <div class="bg-white rounded-lg border border-arena-light p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-6">Productos</h2>
      
      <div class="space-y-4">
        {items.map((item: any) => (
          <div class="flex gap-4 py-4 border-b border-arena-light last:border-0">
            <div class="w-20 h-20 bg-arena-pale rounded-lg overflow-hidden flex-shrink-0">
              {item.products?.image_url ? (
                <img 
                  src={item.products.image_url} 
                  alt={item.products?.name || 'Producto'}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center text-arena">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                </div>
              )}
            </div>
            <div class="flex-grow">
              <h3 class="font-semibold text-gray-900">
                {item.products?.name || 'Producto'}
              </h3>
              <p class="text-gray-600 text-sm">Cantidad: {item.quantity}</p>
              <p class="text-arena font-semibold mt-1">
                ‚Ç¨{(item.price * item.quantity).toFixed(2)}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-8 flex flex-wrap gap-4 justify-center">
      {order.status === 'shipped' && order.tracking_number && (
        <a 
          href={`/rastreo?order=${order.id}`}
          class="px-6 py-3 bg-arena text-white font-semibold rounded-lg hover:bg-arena-light transition-colors"
        >
          üöö Rastrear Env√≠o
        </a>
      )}
      
      <a 
        href={`/api/orders/${order.id}/invoice`}
        target="_blank"
        class="px-6 py-3 border-2 border-arena text-arena font-semibold rounded-lg hover:bg-arena-pale transition-colors"
      >
        üìÑ Descargar Factura
      </a>
      
      {(order.status === 'delivered' || order.status === 'shipped') && (
        <a 
          href={`/devolucion/${order.id}`}
          class="px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors"
        >
          ‚Ü©Ô∏è Solicitar Devoluci√≥n
        </a>
      )}
    </div>

    <!-- Help -->
    <div class="mt-12 text-center py-8 border-t border-arena-light">
      <p class="text-gray-600 mb-4">¬øNecesitas ayuda con tu pedido?</p>
      <a 
        href="https://wa.me/34612345678" 
        target="_blank"
        class="inline-flex items-center gap-2 text-arena font-semibold hover:text-arena-light"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Contactar por WhatsApp
      </a>
    </div>
  </div>
</BaseLayout>
